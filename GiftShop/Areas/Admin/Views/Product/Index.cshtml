@{
    Layout = null;
}
@using GiftShopCORE.Entities

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
@model List<Product>

<div class="container mt-4">
    <h1 class="mb-4">ADMIN</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" asp-controller="Product">
            <button type="button" class="btn btn-primary">Create</button>
        </a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Image</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Image</td>
                    
                    <td>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger btn-sm me-2">Delete</a>
                        <a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>
